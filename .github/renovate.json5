{
  extends: ["config:base"],
  stabilityDays: 1,
  separateMajorMinor: false,
  separateMinorPatch: false,
  prHourlyLimit: 0,
  prConcurrentLimit: 1,
  assigneesFromCodeOwners: true,
  reviewersFromCodeOwners: true,
  dependencyDashboard: true,
  dependencyDashboardAutoclose: true,
  dependencyDashboardTitle: "Renovate updates",
  labels: [
    "dependencies",
  ],
  packageRules: [
    {
      datasources: ["maven"],
      labels: [
        "dependencies",
        "java",
      ],
    },
    {
      datasources: ["gradle-version"],
      labels: [
        "dependencies",
        "gradle",
      ],
    },
    {
      datasources: ["docker"],
      labels: [
        "dependencies",
        "docker",
      ],
    },
    {
      packageNames: ["com.google.guava:guava"],
      allowedVersions: "/^\\d+(\\.\\d+)+-jre$/",
    },
    {
      packageNames: ["net.sourceforge.plantuml:plantuml"],
      allowedVersions: "/^\\d+\\.\\d+(\\.\\d+)+$/",
    },
  ],
  "git-submodules": {
    enabled: false, // This is in beta for now, so let's use Dependabot to update Git submodules
    labels: [
      "dependencies",
      "submodules",
    ],
  },
}
